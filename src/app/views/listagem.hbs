<h1>Lista de Componentes</h1>

{{#if vazio.bool}}
    <table class="table" id="tabela">
    <thead id="azul">
        <tr>
        <th scope="col">ID</th>
        <th scope="col">Nome</th>
        <th scope="col">Data Entrada</th>
        <th scope="col">Tipo</th>
        <th scope="col">Descrição</th>
        <th scope="col">Valor</th>
        <th scope="col">URL imagem</th>
        <th scope="col">Excluir</th>
        <th scope="col">Alterar</th>
        </tr>
    </thead>
    <tbody>
        {{#each listaComponentes}}
            <tr id="laranja">
            <th scope="row">{{id}}</th>
            <td>{{nome}}</td>
            <td>{{dataEntrada}}</td>
            <td>{{tipo}}</td>
            <td class="limite">{{desc}}</td>
            <td>{{valor}}</td>
            <td class="limite">{{url}}</td>
            <td>

                <a href="#" onclick="deletar({{id}})"><img src="/public/img/deletar.png" width="25" height="25"></a>

            </td>
            <td>

                <a href=""><img src="/public/img/alterar.png" width="25" height="25"></a>

            </td>
            </tr>
            <tr>
        {{/each}}
    </tbody>
    </table>
{{else}}

    <p>Sem componentes cadastrados</p>

    <img src="/public/img/zerotwo.gif" width="100" height="100">

{{/if}}

<script src="/public/js/delete.js"></script>